<odoo>
    <data>


        <record id="magento_odoo_settings_tree" model="ir.ui.view">
            <field name="name">Magento Settings</field>
            <field name="model">magento.settings</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="url"/>
                </tree>
            </field>
        </record>


        <record id="magento_odoo_settings_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">magento.settings</field>
            <field name="arch" type="xml">
                <form string="Magento Settings" >
                    <sheet>
                        <group string="Magento">
                            <label for="id" string="Magento Settings"/>
                            <div>
                                <div>
                                    <label for="disable" />
                                    <field name="disable" />
                                </div>
                                <div>
                                    <label for="url"/>
                                    <field name="url"/>
                                </div>
                                <div>
                                    <label for="username"/>
                                    <field name="username"/>
                                </div>
                                <div>
                                    <label for="password"/>
                                    <field name="password" password="True"/>
                                </div>
                            </div>
                        </group>
                        <notebook>
                            <page string="Auto-Import">
                                <group>
                                    <label for="id" string="Categories"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_categories_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_categories_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_categories" class="oe_highlight oe_right"/>
                                    </div>
                                    <label for="id" string="Attributes and Values"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_attributes_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_attributes_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_attribute" class="oe_highlight oe_right"/>
                                    </div>
                                    <label for="id" string="Customers"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_customers_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_customers_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_customers" class="oe_highlight oe_right"/>
                                    </div>
                                    <label for="id" string="Products"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_products_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_products_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_products" class="oe_highlight oe_right"/>
                                    </div>
                                    <label for="id" string="Products Stock"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_products_stock_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_products_stock_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_products_stock" class="oe_highlight oe_right"/>
                                    </div>
                                    <label for="id" string="Sales Orders"/>
                                    <div>
                                        <span>Interval Time</span>
                                        <field name="import_sales_orders_interval_time"/>
                                        <span>Interval Unit</span>
                                        <field name="import_sales_orders_interval_units"/>
                                        <button string="Save" type="object" name="create_cron_sales_orders" class="oe_highlight oe_right"/>
                                    </div>
                                </group>
                            </page>
                            <page string="Import Settings">
                                <group>
                                    <group string="Sales Order">
                                        <field name="magento_sale_order_prefix" string="Prefix"/>
                                        <field name="magento_sale_order_status" string="Import Only Status"/>
                                        <field name="magento_sale_order_from" string="Import Order From"/>
                                        <field name="magento_sale_order_to" string="Import Order To"/>
                                        <field name="magento_sale_order_from_ecommerce" string="Set From E-commerce" />
                                    </group>
                                    <group string="Products">
                                        <field name="magento_product_simple_product" string="Only Simple Product"/>
                                    </group>
                                    <group string="Invoices">
                                        <field name="magento_sale_order_auto_invoice" string="Sales order - Auto Invoice"/>
                                        <field name="magento_invoice_prefix" string="Invoice Prefix"/>
                                        <field name="magento_account_id" string="Default Account" attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_company_id" string="Default Company" attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_currency_id" string="Default Currency" attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_journal_id" string="Default Journal" attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Export Settings">
                                <group>
                                    <group string="Customers">
                                        <field name="magento_customer_email" string="Default Email"/>
                                    </group>
                                </group>
                            </page>
                            <page string="License">
                                <field name="magento_licenze_key" string="License Key" required="True"/>
                                <button name="magento_license_action" string="Validate" type="object" />
                            </page>
                        </notebook>

                    </sheet>

                </form>
            </field>
        </record>

